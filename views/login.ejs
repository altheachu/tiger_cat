<%-include("partials/header.ejs")%>
<div class="container text-center">
  <div class="login_layout">
    <form action="/authorization" method="post" class="login_form">
      <div class="login_label">
          <label for="account">Account 帳號:</label>
      </div>
      <div class="login_input">
        <input type="text" id="account" name="account" value="althea"/>
      </div>
      <div class="login_label">
          <label for="password">Password 密碼:</label>
      </div>
      <div class="login_input">
          <input type="text" id="password" name="password" value="123456"/>
      </div>
      <div class="login_btn">
        <input type="submit" class="btn btn-primary" value="Login 登入"/>
      </div>
      <div class="login_btn">
        <a href="/" class="btn">Back 返回</a>
      </div>
      <% if(locals.msg){ %>
        <div class="login_msg">
          <%=msg%>
        </div>
      <% } %>
    </form>
  </div>
</div>
<%-include("partials/footer.ejs")%>